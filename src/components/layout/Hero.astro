---
const nombre = "Rodrigo Alejandro";
const descripcion = "Desarrollador de software.";
---

<section id="inicio" class="py-16 px-4 bg-white dark:bg-gray-900 transition-colors duration-500 overflow-hidden">
  <article class="max-w-6xl mx-auto">
    <div class="animate-fade-in" style="animation-delay: 100ms;">
      <h1 class="text-4xl py-16 sm:text-6xl font-bold text-gray-900 dark:text-white mb-6 leading-tight">
        Hola Soy <span class="text-blue-600 dark:text-blue-400">{nombre}</span>
      </h1>
      <p class="text-xl text-gray-700 dark:text-gray-300 max-w-3xl mb-8 leading-relaxed animate-slide-in" style="animation-delay: 200ms;">
        {descripcion}
      </p>
    </div>
  </article>
</section>
